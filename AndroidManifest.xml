<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      android:versionCode="1" package="patpat.game" 
      android:versionName="0.1.0" android:installLocation="preferExternal">
    <application android:icon="@drawable/icon" android:label="@string/app_name"
    		android:screenOrientation="portrait">
        <activity android:name=".PatPat"
        	android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    	<activity android:name="MainMenuActivity"></activity>
		<activity android:name="SongSelectionActivity"></activity>
		<activity android:name="BeatmapSelectionActivity"></activity>
		<activity android:name="HighScoresActivity"></activity>
		<activity android:name="WorldActivity"></activity>
</application>

<uses-sdk android:minSdkVersion="8"></uses-sdk>

</manifest> 